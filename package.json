{
  "name": "benjaminhaeberli.ch",
  "description": "E-Nell website, built with Kirby CMS and TailwindCSS",
  "author": "Benjamin Haeberli <hello@benjaminhaeberli.ch> (https://benjaminhaeberli.ch/)",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjaminhaeberli/e-nell.com.git"
  },
  "keywords": [
    "kirby",
    "website",
    "tailwindcss"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "tailwind:watch": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/public.css -c ./tailwind.config.js -w",
    "tailwind:build": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/public.css -c ./tailwind.config.js -m",
    "serve": "concurrently \"postcss ./assets/css/style.css -o ./assets/public.css --watch\"  \"live-server ./\"",
    "build": "postcss ./assets/css/style.css -o ./assets/public.css"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.19.6",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "cssnano": "^6.0.1",
    "fast-glob": "^3.2.12",
    "license-checker": "^8.0.1",
    "postcss": "^8.4.25",
    "postcss-cli": "^10.1.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-css-order": "^1.3.1",
    "tailwindcss": "^3.3.2"
  }
}
